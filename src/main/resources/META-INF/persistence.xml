<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="default" transaction-type="JTA">
        <!-- Gunakan resource JNDI dari GlassFish -->
        <jta-data-source>jdbc/postgres</jta-data-source>

        <!-- Kalau kamu punya entitas, tambahkan class-nya di sini
             (tidak wajib kalau EclipseLink bisa scan otomatis) -->
        <!--
        <class>com.example.model.User</class>
        -->

        <properties>
            <!-- Auto-create schema (khusus untuk pengembangan) -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>

            <!-- Logging EclipseLink -->
            <property name="eclipselink.logging.level" value="FINE"/>

            <!-- Target DB biar EclipseLink ngerti dialek SQL-nya -->
            <property name="eclipselink.target-database" value="PostgreSQL"/>

            <!-- Optional: format SQL & echo ke log -->
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
